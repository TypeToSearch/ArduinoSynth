BoxLayout:
    orientation: 'vertical'
    SampleSlider:
        id: samples
        num_sliders: 16
        size: (400, 100)
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.25)
        ConnectButton:
            id: connect
            text: 'Connect'
            on_press: self.button_pressed()
        Button:
            text: 'Send'
    Label:
        text: connect.status
        size_hint: (1, 0.1)
